<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button_newgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="107dp"
        android:text="New Game" />

    <Button
        android:id="@+id/button_loadgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_newgame"
        android:layout_alignBottom="@+id/button_newgame"
        android:layout_marginLeft="92dp"
        android:layout_toRightOf="@+id/button_newgame"
        android:text="@string/load_game" />

</RelativeLayout>